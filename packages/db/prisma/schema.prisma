// ====================== DATASOURCE & GENERATOR ======================
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
}

// ====================== USER ======================
model User {
  id           String    @id @default(uuid())
  email        String    @unique
  name         String?
  image        String?
  roles        String[]  @default(["user"]) // can include "super_admin" for first user

  // Plan & Credits
  plan         String    @default("starter")
  credits      Int       @default(10)

  // 2FA
  totpEnabled  Boolean   @default(false) @map("totp_enabled")
  totpSecret   String?   @map("totp_secret")

  // Timestamps
  createdAt    DateTime  @default(now()) @map("created_at")
  updatedAt    DateTime  @updatedAt @map("updated_at")

  // Relations
  projects     Project[]
  accounts     Account[]
  sessions     Session[]

  @@map("users")
}

// ====================== PROJECT ======================
model Project {
  id            String    @id @default(uuid())
  title         String
  prompt        String    @db.Text
  status        String    @default("queued")
  progress      Int       @default(0)
  currentAgent  String?   @map("current_agent")
  logs          String[]  @default([])

  deployUrl     String?   @map("deploy_url")
  previewUrl    String?   @map("preview_url")
  codeRepoUrl   String?   @map("code_repo_url")
  errorMessage  String?   @db.Text @map("error_message")

  // Relations
  userId        String    @map("user_id")
  user          User      @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime  @updatedAt @map("updated_at")

  @@index([userId])
  @@index([status])
  @@map("projects")
}

// ====================== NEXTAUTH MODELS ======================
model Account {
  id                String  @id @default(uuid())
  userId            String  @map("user_id")
  type              String
  provider          String
  providerAccountId String  @map("provider_account_id")
  refreshToken      String? @db.Text @map("refresh_token")
  accessToken       String? @db.Text @map("access_token")
  expiresAt         Int?    @map("expires_at")
  tokenType         String? @map("token_type")
  scope             String?
  idToken           String? @db.Text @map("id_token")
  sessionState      String? @map("session_state")

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(uuid())
  sessionToken String   @unique @map("session_token")
  userId       String   @map("user_id")
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}
