{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",

    "strict": true,
    "noUncheckedIndexedAccess": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "resolveJsonModule": true,
    "incremental": true,
    "noEmit": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@cursorcode/types": ["../../packages/types"],
      "@cursorcode/db": ["../../packages/db"],
      "@cursorcode/ui": ["../../packages/ui"]
    },

    "types": ["node"],

    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "../../packages/types/**/*.d.ts"
  ],
  "exclude": ["node_modules", ".next"]
}
