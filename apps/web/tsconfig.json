{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "preserve",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "incremental": true,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@cursorcode/types": ["../../packages/types"],
      "@cursorcode/db": ["../../packages/db"],
      "@cursorcode/ui": ["../../packages/ui"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.d.ts",
    "../../packages/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
