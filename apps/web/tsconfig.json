{
  "extends": "../../packages/config/tsconfig.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@cursorcode/types": ["../../packages/types"],
      "@cursorcode/db": ["../../packages/db"],
      "@cursorcode/ui": ["../../packages/ui"]
    },
    "allowJs": true,
    "jsx": "preserve",
    "moduleResolution": "bundler",
    "types": ["node", "jest"]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.d.ts",
    "../../packages/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules",
    ".next"
  ]
}
