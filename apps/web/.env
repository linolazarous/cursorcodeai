# === Backend API ===
NEXT_PUBLIC_API_URL=https://your-backend-domain.com
# ^ Your deployed FastAPI URL (Render/Railway/etc.)

# === Auth (NextAuth / Auth.js) ===
NEXTAUTH_SECRET=long-random-secret-for-nextauth
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_INTERNAL_URL=http://localhost:3000   # optional, only for local testing

# === OAuth Providers ===
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

GITHUB_ID=your-github-client-id
GITHUB_SECRET=your-github-client-secret

# === Stripe (Frontend only – Publishable key) ===
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_...

# === Environment ===
NODE_ENV=production
